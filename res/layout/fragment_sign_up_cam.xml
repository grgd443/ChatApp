<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="layout.SignUpCamFragment">



    <Button
        android:id="@+id/skip_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:text="Skip >"
        android:textColor="#6a72ff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/icon_IBtn"
        android:layout_width="400px"
        android:layout_height="400px"

        android:layout_centerHorizontal="true"

        android:layout_marginTop="80dp"

        android:backgroundTint="@android:color/transparent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <Button
        android:id="@+id/chooseFromGallery_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="43dp"
        android:backgroundTint="@android:color/transparent"
        android:text="or\n\nChoose From Gallery"
        android:textAlignment="center"
        android:textColor="#94176e"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/icon_IBtn"
        android:layout_centerHorizontal="true" />




    <Button

        android:textAlignment="center"
        android:textColor="#94176e"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/camNext"
        android:text="Next"
        android:backgroundTint="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
